            "fields": {
              "keyword": {
                "type": "keyword",
                "ignore_above": 256
              }
            }
          }
        }
      },
      "id": {
        "type": "long"
      },
      "original_title": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        },
        "analyzer": "original_title_analyser"
      },
      "overview": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        },
        "analyzer": "overview_analyser"
      },
      "release_date": {
        "type": "date",
        "format": "epoch_millis"
      },
      "revenue": {
        "type": "long"
      },
      "runtime": {
        "type": "long"
      },
      "status": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "title": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        },
        "analyzer": "title_analyser"
      },
      "vote_average": {
        "type": "float"
      },
      "vote_count": {
        "type": "long"
      }
    }
  }
}'

