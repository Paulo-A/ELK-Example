#!/bin/bash

for i in {30..0}; do
  if curl http://es-host:9200; then
    curl -XPUT "http://es-host:9200/movies-without-mapping?pretty";
    break;
  fi
  sleep 2
done

curl -XPUT "http://es-host:9200/movies-with-mapping?pretty" -H "Content-Type: application/json" -d '
{
  "settings": {
    "analysis": {
      "filter": {
        "whitespace_remove": {
          "type": "pattern_replace",
          "pattern": " ",
          "replacement": ""
        },
        "synonyms": {
          "type": "synonym",
          "synonyms": [
            "[batman, dark knight]"
          ]
        }
      },
      "analyzer": {
        "original_title_analyser": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": [
            "synonyms",
            "lowercase",
            "asciifolding"
          ]
        },
        "overview_analyser": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "synonyms",
            "whitespace_remove",
            "lowercase",
            "asciifolding"
          ]
        },
        "title_analyser": {
          "type": "custom",
          "tokenizer": "standard",
